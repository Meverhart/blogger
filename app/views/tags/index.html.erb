<h1> All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
    <%= link_to tag, tag_path(tag), class: 'tag_title' %>
    <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete this tag?"} %>
    </li>
  <% end %>
</ul>
<%= link_to "<< Back to Articles List", articles_path %>
